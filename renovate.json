{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommits"
  ],
  "crossplane": {
    "fileMatch": ["(^|/)example/.*\\.ya?ml$"]
  },
  "packageRules": [
    {
      "matchManagers": ["crossplane"],
      "matchFileNames": ["example/**"],
      "groupName": "examples"
    },
    {
      "matchManagers": ["dockerfile"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "docker dependencies"
    },
    {
      "matchManagers": ["github-actions"],
      "groupName": "github actions",
      "pinDigests": true
    },
    {
      "matchManagers": ["gomod"],
      "groupName": "golang dependencies"
    }
  ],
  "dockerfile": {
    "fileMatch": ["Dockerfile$"]
  },
  "regexManagers": [
    {
      "fileMatch": ["^Dockerfile$"],
      "matchStrings": [
        "ENV (?<depName>[A-Z_]+)_VERSION=(?<currentValue>.*?)\\s"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "{{#if (depName === 'KUBECTL')}}kubernetes/kubernetes{{else if (depName === 'GH_CLI')}}cli/cli{{else if (depName === 'BOILERPLATE')}}gruntwork-io/boilerplate{{else if (depName === 'HELM_DOCS')}}norwoodj/helm-docs{{/if}}"
    }
  ]
}
